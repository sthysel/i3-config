separator_block_width=15
markup=pango

[mpd]
label=🎼
command=i3mpd
interval=once
signal=11

[pacman]
label=📦
command=i3pacman
interval=once
signal=8


[weather]
command=i3weather
interval=3600

[mail]
label=📬
