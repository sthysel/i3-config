general {
    colors = true
    interval = 5
    output_format = "i3bar"
}


order += "disk /"
order += "load"
order += "cpu_temperature 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "tztime local"
order += "volume master"

battery 0 {
    format = "%status %percentage %remaining %emptytime"
    last_full_capacity = true
    hide_seconds = true
    integer_battery_capacity = true
    threshold_type = time
    status_chr = "ğŸ”Œ"
    status_bat = "ğŸ”‹"
    status_unk = "?"
    status_full = "âš¡"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

load {
    format = "%1min"
}

disk "/" {
    format = "/ %free"
}

disk "/home" {
    format = "/home %free"
}

volume master {
    format = "â™ª%volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

wireless _first_ {
    format_up = "ğŸ“¶%quality %essid (%bitrate @%frequency) %ip "
    format_down = "ï±"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = ""
}


time {
    format = "%d.%m.%Y %H:%M"
}

tztime local {
    format = "%Y/%m/%d %H:%M:%S"
}

disk "/" {
    format = "%avail"
}

